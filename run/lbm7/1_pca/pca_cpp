parm ../../../top_files/dry_lbm7.prmtop
trajin ../1_pdt/1_full_fit_lbm7.nc
rms first :1-188@CA
average 1_avg_lbm7.pdb pdb
run

# Step two. RMS-Fit to average structure. Calculate covariance matrix.
reference 1_avg_lbm7.pdb [avg]
rms ref [avg] :1-188@CA RMSD
matrix mwcovar name mtx_lbm7 :1-188@CA
createcrd crd_lbm7
run

# Step three. Diagonalize matrix.
runanalysis diagmatrix mtx_lbm7 vecs 558 out 1_modes_lbm7
go
