parm ../../../top_files/dry_lfm7.prmtop
trajin ../3_pdt/3_full_fit_lfm7.nc
rms first :1-170@CA
average 3_avg_lfm7.pdb pdb
run

# Step two. RMS-Fit to average structure. Calculate covariance matrix.
reference 3_avg_lfm7.pdb [avg]
rms ref [avg] :1-170@CA RMSD
matrix mwcovar name mtx_lfm7 :1-170@CA
createcrd crd_lfm7
run

# Step three. Diagonalize matrix.
runanalysis diagmatrix mtx_lfm7 vecs 504 out 3_modes_lfm7
go
